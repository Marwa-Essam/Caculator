<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        app:layout_constraintBottom_toTopOf="@id/raw1">

        <Button
            android:id="@+id/buttonDel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="0.25"
            android:backgroundTint="#74FF9800"
            android:onClick="backspace"
            android:text="⌫"
            android:textColor="#ecf0f1"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnrote"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="0.25"
            android:backgroundTint="#36FFC107"
            android:onClick="onOperatorClick"
            android:text="√"
            android:textColor="#FF9800"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnpower"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#36FFC107"
            android:onClick="onOperatorClick"
            android:text="^"
            android:textColor="#FF9800"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/raw1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintTop_toBottomOf="@+id/resulttv">

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#03FFFFFF"
            android:onClick="onDigitClick"
            android:text="7"
            android:textColor="@color/purple_700"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#03FFFFFF"
            android:onClick="onDigitClick"
            android:text="8"
            android:textColor="@color/purple_700"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#03FFFFFF"
            android:onClick="onDigitClick"
            android:text="9"
            android:textColor="@color/purple_700"
            android:textSize="22sp" />


        <Button
            android:id="@+id/btnx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#7AE19AED"
            android:onClick="onOperatorClick"
            android:text="X"
            android:textColor="@color/purple_500"
            android:textSize="22sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/raw2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintTop_toBottomOf="@+id/raw1">

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#03FFFFFF"
            android:onClick="onDigitClick"
            android:text="4"
            android:textColor="@color/purple_700"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#03FFFFFF"
            android:onClick="onDigitClick"
            android:text="5"
            android:textColor="@color/purple_700"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#03FFFFFF"
            android:onClick="onDigitClick"
            android:text="6"
            android:textColor="@color/purple_700"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnmin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#7AE19AED"
            android:onClick="onOperatorClick"
            android:text="-"
            android:textColor="@color/purple_500"
            android:textSize="22sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/raw3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintTop_toBottomOf="@+id/raw2">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#03FFFFFF"
            android:onClick="onDigitClick"
            android:text="1"
            android:textColor="@color/purple_700"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#03FFFFFF"
            android:onClick="onDigitClick"
            android:text="2"
            android:textColor="@color/purple_700"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#03FFFFFF"
            android:onClick="onDigitClick"
            android:text="3"
            android:textColor="@color/purple_700"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnplus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#7AE19AED"
            android:onClick="onOperatorClick"
            android:text="+"
            android:textColor="@color/purple_500"
            android:textSize="22sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/raw4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintTop_toBottomOf="@+id/raw3">

        <Button
            android:id="@+id/btnpoint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#03FFFFFF"
            android:onClick="onDigitClick"
            android:text="."
            android:textColor="@color/purple_700"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#03FFFFFF"
            android:onClick="onDigitClick"
            android:text="0"
            android:textColor="@color/purple_700"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnequal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:onClick="onEqual"
            android:text="="
            android:textSize="22sp" />

        <Button
            android:id="@+id/btndiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#7AE19AED"
            android:onClick="onOperatorClick"
            android:text="/"
            android:textColor="@color/purple_500"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="198dp"
        android:layout_height="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/raw4">

    </LinearLayout>

    <TextView
        android:id="@+id/resulttv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:hint="0"
        android:textSize="28sp"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>